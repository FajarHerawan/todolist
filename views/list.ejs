<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
   
    <% newListItems.forEach(function(item){%>
      <form class="list" action="/delete"method="post">
      <div class="item">   
        <input type="hidden" value="<%= listTitle %> " name="listTitle">
        <input id="checkbox"type="checkbox"name="checkbox" onChange="this.form.submit()" value="<%=item._id%>">
        <p><%=  item.name %></p>
        
      </div> 
    </form> 
    <% }) %>
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <input type="hidden" value="<%= listTitle %> " name="listTitle">
        <button type="submit" name="list">+</button>
      </form>
  </div> 
<%- include("footer") -%>

